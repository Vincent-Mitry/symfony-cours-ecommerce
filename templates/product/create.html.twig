{% extends "base.html.twig" %}

{# le tag 'form_theme' permet de dire à twig que concernant le formulaire 'formView' on veut utiliser un thème bootstrap présent dans le fichier ('bootstrap_4_layout.html.twig') #}
{# {% form_theme formView 'bootstrap_4_layout.html.twig' %} -> ligne commentée car le choix du thème est configuré dans le ficher config/packages/twig.yaml #}

	{% block title %}
Création d'un produit
{% endblock %}

	{% block body %}
		<h1>
	Nouveau produit
	</h1>

	{# {{ form(formView) }} #}

	{{ form_start(formView)}}

	{{ form_errors(formView )}}

	{# {{ form_widget(formView )}} #}

		<div class="row"> <div class="col">
			{{ form_row(formView.name )}}
			{{ form_row(formView.price )}}
		</div>
		<div class="col">
			{{ form_row(formView.mainPicture ) }}
			{{ form_row(formView.category )}}
			{{ form_row(formView.shortDescription )}}
		</div>
	</div>

	<button class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer le produit
	</button>

	{{ form_end(formView )}}

{% endblock %}
